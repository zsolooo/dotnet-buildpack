#!/usr/bin/env bash
# bin/compile <build-dir> <cache-dir>

# fail fast
set -e

if [ $STACK != "cedar-14" ]; then
	echo "Stack ${STACK} not supported" && exit 1
fi

BUILD_DIR=$1
CACHE_DIR=$2
ENV_DIR=$3
# This is where the buildpack is stored
BUILDPACK_DIR=`cd $(dirname $0); cd ..; pwd`

source $BUILDPACK_DIR/bin/util

export_env_dir ${ENV_DIR}
export CI=true

: ${NODE_VERSION:="4.4.0"}

SRC_DIR=`mktemp -d`
# Move the app source code into temporary src dir using subshell to not leak shopt
(
	shopt -s dotglob
	mv ${BUILD_DIR}/* ${SRC_DIR}
)

mkdir -p ${CACHE_DIR}

DEPLOYMENT_FILE_LOCATION=${SRC_DIR}/.deployment

# TODO: This test doesn't seen to actually work
if [[ -n $(find . -type f -iname package.json -o -iname bower.json ) ]]
then
	echo "Installing Node"
	NODE_PATH=`mktemp -d`
	curl https://nodejs.org/dist/v${NODE_VERSION}/node-v${NODE_VERSION}-linux-x64.tar.gz -Ls \
		| tar xz -C ${NODE_PATH}
	export PATH="${NODE_PATH}/node-v${NODE_VERSION}-linux-x64/bin:${PATH}"

	echo "Installing bower"
	if ! hash bower 2>/dev/null; then
		npm install -g bower
	fi
fi

# Install .NET CLI Nightly
apt_install "http://dotnetcli.blob.core.windows.net/dotnet/beta/Installers/Latest/dotnet-ubuntu-x64.latest.deb"

if [ -n "$(find ${SRC_DIR}/global.json)" ]; then
	echo "Get version from global.json"
	DNX_VERSION=$(ruby -rjson -e "j = JSON.parse(File.open('${SRC_DIR}/global.json','r:bom|utf-8').read); unless j['sdk'].nil? ; puts j['sdk']['version'];end")
	echo "${DNX_VERSION:=latest}"
fi


if [ -n "$PROJECT" ]; then
	PROJECT_JSON_FILE=${SRC_DIR}/${PROJECT}
	echo "Project file configured in PROJECT environment variable"
elif [ -e ${DEPLOYMENT_FILE_LOCATION} ]; then
	PROJECT_JSON_FILE=${SRC_DIR}/$(awk -F "=" '/project/ {print $2}' ${DEPLOYMENT_FILE_LOCATION} | tr -d ' ')
	echo "Project file configured in .deployment file"
else
	PROJECT_JSON_FILES=$(find ${SRC_DIR}/. -maxdepth 3 -iname "project.json")
	printf 'Found %s project.json files\n' $(echo "$PROJECT_JSON_FILES" | wc -l | tr -d ' ')
	PROJECT_JSON_FILE=$(echo "$PROJECT_JSON_FILES" | head -1)
fi
echo "Building ${PROJECT_JSON_FILE}"

PROJECT_DIR="$PROJECT_JSON_FILE"
if [[ -f $PROJECT_JSON_FILE ]]; then
	PROJECT_DIR=$(dirname $PROJECT_JSON_FILE)
fi

PROJECT_DIR_NAME=$(basename $PROJECT_DIR)

PROJECT_NAME=$(ruby -rjson -e "j = JSON.parse(File.open('${PROJECT_DIR}/project.json','r:bom|utf-8').read); unless j['compilationOptions'].nil? ; puts j['compilationOptions']['outputName'];end")
echo "${PROJECT_NAME:=$PROJECT_DIR_NAME}"

# Adding libuv package. But I think it should be added automatically when referencing the Kestrel package. :(
ruby -rjson -e "j = JSON.parse(File.open('${PROJECT_DIR}/project.json','r:bom|utf-8').read);if j['dependencies'] && j['dependencies']['Microsoft.AspNetCore.Server.Kestrel'] && j['dependencies']['Microsoft.AspNetCore.Internal.libuv-Linux'].nil? ;j['dependencies']['Microsoft.AspNetCore.Internal.libuv-Linux']={'version': '1.0.0-*','type': 'build'};end;print(j.to_json);" > ${PROJECT_DIR}/project.tmp.json
mv ${PROJECT_DIR}/project.tmp.json ${PROJECT_DIR}/project.json

dotnet restore ${PROJECT_JSON_FILE}

# configure some npm command during building
export PATH="${PROJECT_DIR}/node_modules/.bin:${PATH}"

echo "Publishing the app"

# Publish to heroku_output
dotnet publish ${PROJECT_JSON_FILE} --output ${BUILD_DIR}/heroku_output --configuration Release

echo "Publish Successed"

echo "To fix some temporary bug"
# Copy libuv.so :( it sometimes or offten lost. bug?
#[ -f ${BUILD_DIR}/heroku_output/libuv.so ] || cp -ap ${HOME}/.nuget/packages/Microsoft.AspNetCore.Server.Kestrel/${LIBUV_VERSION}/runtimes/debian-x64/native/libuv.so ${BUILD_DIR}/heroku_output/libuv.so

# It's too hard for me to read version exactly from project.lock.json. TODO
[ -f ${BUILD_DIR}/heroku_output/libuv.so ] || cp -ap ${BUILDPACK_DIR}/patch/libuv.so ${BUILD_DIR}/heroku_output/libuv.so

# Microsoft.Extensions.DependencyModel package is out-of-date in myget cdn. :( cache is not refreshed now. The package in cdn is still the one compiled at 2016/02/28.
# The patch is compiled at 2016/03/15
[ "1456695698" -eq `date +%s -r ${BUILD_DIR}/heroku_output/Microsoft.Extensions.DependencyModel.dll` ] && `yes | cp -rf ${BUILDPACK_DIR}/patch/Microsoft.Extensions.DependencyModel.dll ${BUILD_DIR}/heroku_output/Microsoft.Extensions.DependencyModel.dll`

mkdir -p ${BUILD_DIR}/.profile.d
cp -n ${BUILDPACK_DIR}/.profile.d/* ${BUILD_DIR}/.profile.d/

if [ -e ${SRC_DIR}/Procfile ]; then
	cp ${SRC_DIR}/Procfile ${BUILD_DIR}
else
	cat << EOT >> ${BUILD_DIR}/Procfile
web: cd \$HOME/heroku_output && ./${PROJECT_NAME} --server.urls http://+:\$PORT
EOT
fi
